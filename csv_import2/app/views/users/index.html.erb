<p>一覧画面</p>
<% @users.each do |user| %>
 <p>  <%= user.name %> </p>
 <p>  <%= user.age %> </p>
 <p> <%= link_to '詳細', "/users/#{user.id}", method: :get %> 
 <%= link_to '削除ボタン', "/users/#{user.id}", method: :delete, data: {confirm: "削除しても良いですか？"} %> 
 <%= link_to '編集', "/users/#{user.id}/edit", method: :get %>
 </p>
 <% end %>

<%= link_to '投稿画面へ', '/users/new'%>

 <%= link_to "CSV形式でエクスポート", users_path(format: :csv) %>


<%= form_tag import_users_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "インポート" %>
<% end %>

